@page
@model WebApp.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new book</h1>

<hr/>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Book.Title" class="control-label"></label>
            <input asp-for="Book.Title" class="form-control"/>
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Book.Summary" class="control-label"></label>
            <input asp-for="Book.Summary" class="form-control"/>
            <span asp-validation-for="Book.Summary" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Book.PublishingYear" class="control-label"></label>
            <input asp-for="Book.PublishingYear" class="form-control"/>
            <span asp-validation-for="Book.PublishingYear" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Book.AuthoredYear" class="control-label"></label>
            <input asp-for="Book.AuthoredYear" class="form-control"/>
            <span asp-validation-for="Book.AuthoredYear" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Book.WordCount" class="control-label"></label>
            <input asp-for="Book.WordCount" class="form-control"/>
            <span asp-validation-for="Book.WordCount" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="BookAuthor.AuthorId" class="control-label"></label>
            <select asp-for="BookAuthorIds" class="form-control" asp-items="Model.AuthorIdSelectList"></select>
            <span asp-validation-for="BookAuthorIds" class="text-danger"></span>
        </div>
        
        
    </div>


    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Book.LanguageId" class="control-label"></label>
            <select asp-for="Book.LanguageId" class="form-control" asp-items="Model.LanguageIdSelectList"></select>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Book.PublisherId" class="control-label"></label>
            <select asp-for="Book.PublisherId" class="form-control" asp-items="Model.PublisherIdSelectList">
                <option value="-1"> --- INSERT NEW --- </option>
            </select>
            <span asp-validation-for="Book.PublisherId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPublisherName" class="control-label"></label>
            <input asp-for="NewPublisherName" class="form-control"/>
            <span asp-validation-for="NewPublisherName" class="text-danger"></span>
        </div>
        
    </div>

    <div class="form-row">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>

</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}