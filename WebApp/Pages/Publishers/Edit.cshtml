@page
@model WebApp.Pages.Publishers.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit publisher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Publisher.PublisherId" />
            <div class="form-group">
                <label asp-for="Publisher.PublisherName" class="control-label"></label>
                <input asp-for="Publisher.PublisherName" class="form-control" />
                <span asp-validation-for="Publisher.PublisherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
